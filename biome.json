{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "files": {
    "include": ["**/*.json", "src/**/*.ts", "test/**/*.ts"],
    "ignoreUnknown": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "organizeImports": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "complexity": {
        "noStaticOnlyClass": "off"
      },
      "style": {
        "noUselessElse": "off",
        "noParameterAssign": "off",
        "noNonNullAssertion": "info"
      },
      "suspicious": {
        "noAssignInExpressions": "off"
      }
    }
  }
}
